<launch>
  <!-- URDF & TF Setup -->
  <param name="robot_description" command="$(find xacro)/xacro '$(find husky_description)/urdf/husky.urdf.xacro'" />

  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" output="screen" />
  <node pkg="tf" type="static_transform_publisher" name="world_to_map" args="0 0 0 0 0 0 world map 100" />
  <node pkg="tf" type="static_transform_publisher" name="map_to_odom_broadcaster" args="0 0 0 0 0 0 map odom 100" />

  <!-- Localization -->
  <node pkg="robot_localization" type="ekf_localization_node" name="ekf_localization" output="screen">
    <rosparam command="load" file="$(find husky_waypoint_nav)/config/localization.yaml" />
  </node>

  <!-- Include move_base from husky_navigation -->
  <include file="$(find husky_navigation)/launch/move_base.launch"/>

  <!-- Joystick and teleop -->
  <!-- ... your joystick/teleop nodes ... -->

  <!-- Pose Covariance Conversion Node -->
  <node pkg="husky_waypoint_nav" type="pose_to_covariance_node.py" name="pose_cov_converter" output="screen" />

  <!-- Waypoint Collector and Navigator -->
  <!-- ... your waypoint nodes ... -->
</launch>

